{
  "extends": ["plugin:@eevee/eslint-plugin/react"],
  "root": true,
  "rules": {
    "@eevee/max-len": "off",
    "no-misleading-character-class": "off",
    "@typescript-eslint/naming-convention": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"], // Your TypeScript files extension
      "parserOptions": {
        "project": ["./tsconfig.eslint.json"]
      }
    }
  ]
}
